<?xml version="1.0"?>
<root>
    <appdef>
        <appname>XCODE</appname>
        <equal>com.apple.dt.Xcode</equal>
    </appdef>
    <appdef>
        <appname>CHROME</appname>
        <equal>com.google.Chrome</equal>
    </appdef>
    <appdef>
        <appname>FINDER</appname>
        <equal>com.apple.finder</equal>
    </appdef>
    <appdef>
        <appname>LYX</appname>
        <equal>org.lyx.lyx</equal>
    </appdef>
    <appdef>
        <appname>ITERM2</appname>
        <equal>com.googlecode.iterm2</equal>
    </appdef>
    <appdef>
        <appname>ARDUINO_IDE</appname>
        <equal>cc.arduino.Arduino</equal>
    </appdef>
    <item>
      <name>Xcode Vim Emulation</name>
      <identifier>tianyu_xcode</identifier>
      <only>XCODE</only>
        <!-- <autogen>
          __SimultaneousKeyPresses__
          KeyCode::J, KeyCode::K,
          KeyCode::ESCAPE
        </autogen> -->
        <autogen>
          __KeyToKey__
          KeyCode::E, ModifierFlag::CONTROL_R,
          KeyCode::END
        </autogen>
        <autogen>
          __KeyToKey__
          KeyCode::A, ModifierFlag::CONTROL_R,
          KeyCode::HOME
        </autogen>
        <autogen>
            __KeyToKey__
            KeyCode::H, ModifierFlag::CONTROL_R,
            KeyCode::CURSOR_LEFT
        </autogen>
        <autogen>
            __KeyToKey__
            KeyCode::J, ModifierFlag::CONTROL_R,
            KeyCode::CURSOR_DOWN
        </autogen>
        <autogen>
            __KeyToKey__
            KeyCode::L, ModifierFlag::CONTROL_R,
            KeyCode::CURSOR_RIGHT
        </autogen>
        <autogen>
            __KeyToKey__
            KeyCode::K, ModifierFlag::CONTROL_R,
            KeyCode::CURSOR_UP
        </autogen>
    </item>
    <item>
        <name>Emacs Navigation Shortcuts</name>
        <identifier>tianyu_finder</identifier>
        <only>XCODE,CHROME,SAFARI,FINDER,ARDUINO_IDE</only>
        <autogen>
            __KeyToKey__
            KeyCode::F,  ModifierFlag::CONTROL_R,
            KeyCode::CURSOR_RIGHT
        </autogen>
        <autogen>
            __KeyToKey__
            KeyCode::B,  ModifierFlag::CONTROL_R,
            KeyCode::CURSOR_LEFT
        </autogen>
        <autogen>
            __KeyToKey__
            KeyCode::N,  ModifierFlag::CONTROL_R,
            KeyCode::CURSOR_DOWN
        </autogen>
        <autogen>
            __KeyToKey__
            KeyCode::P,  ModifierFlag::CONTROL_R,
            KeyCode::CURSOR_UP
        </autogen>
        <autogen>
            __KeyToKey__
            KeyCode::E,  ModifierFlag::CONTROL_R,
            KeyCode::END
        </autogen>
        <autogen>
            __KeyToKey__
            KeyCode::A,  ModifierFlag::CONTROL_R,
            KeyCode::HOME
        </autogen>
    </item>
    <item>
        <name>Lyx shortcuts</name>
        <identifier>tianyu_lyx</identifier>
        <only>LYX</only>
        <autogen>
            __KeyToKey__
            KeyCode::SPACE,  MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_COMMAND,
            KeyCode::M, ModifierFlag::COMMAND_L
        </autogen>
        <autogen>
            __KeyToKey__
            KeyCode::I,  MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_COMMAND,
            KeyCode::KEY_6, ModifierFlag::SHIFT_L 
        </autogen>

    </item>

    <item>
        <name>Safari shortcuts</name>
        <identifier>tianyu_safari</identifier>
        <only>SAFARI</only>
        <autogen>
            __KeyToKey__
            KeyCode::F5,
            KeyCode::R, ModifierFlag::COMMAND_L
        </autogen>
        <autogen>
            __KeyToKey__
            KeyCode::D, MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_COMMAND | ModifierFlag::NONE,
            KeyCode::L, ModifierFlag::COMMAND_L
        </autogen>
        <autogen>
            __KeyToKey__
            KeyCode::J, MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_COMMAND | ModifierFlag::NONE,
